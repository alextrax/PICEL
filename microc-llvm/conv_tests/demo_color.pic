int main()
{
  int i;
  int j;
  pic a;
  a=newpic(800,800);
  for(i=0;i<400;i++)
  {
      for(j=0;j<400;j++)
      {
         a.r[i][j]=255*j/400;
      }
      for(j=400;j<800;j++)
      {
         a.r[i][j]=255*(800-j)/400;
      }
  }
  for(i=400;i<800;i++)
  {
      for(j=0;j<400;j++)
      {
         a.b[i][j]=255*(400-j)/400;
      }
      for(j=400;j<800;j++)
      {
         a.b[i][j]=255*(j-400)/400;
      }
  }
  save_file("gradual.bmp",a);


}
