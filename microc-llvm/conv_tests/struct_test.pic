
mat kernel[5][5];

int main(){ 

pic a;
pic b;
pic c;
a = load("input.bmp");
b = load("balloon.bmp");
c = load("lena.bmp");

convolution(a, kernel);

for (int x = 0 ; x < a.w ; x = x+1){
	for (int y = 0 ; y < a.h ; y = y+1){

		a.g[x][y] = 255;

	}

}


for (int x = 0 ; x < b.w ; x = x+1){
	for (int y = 0 ; y < b.h ; y = y+1){

		b.b[x][y] = 128;

	}

}

for (int i = 0 ; i < c.w ; i = i+1){
	for (int j = 0 ; j < c.h ; j = j+1){

		c.r[i][j] = 128;

	}

}


save_file("a_test.bmp", a);
save_file("b_test.bmp", b);
save_file("c_test.bmp", c);

pic d = newpic(c.w, c.h);

for (int i = 0 ; i < c.w ; i = i+1){
	for (int j = 0 ; j < c.h ; j = j+1){

		d.r[i][j] = c.r[i][j];
		d.g[i][j] = c.g[i][j];
		d.b[i][j] = c.b[i][j];
	}

}

save_file("d_new.bmp", d);


}
