pic copy_pic(pic a)
{
  pic temp=newpic(a.w,a.h);
  int i;
  int j;
  for(i=0;i<a.w;i++)
  {
    for(j=0;j<a.h;j++)
    {
      temp.r[i][j]=a.r[i][j];
      temp.g[i][j]=a.g[i][j];
      temp.b[i][j]=a.b[i][j];
    }
  }
  return temp;

}



